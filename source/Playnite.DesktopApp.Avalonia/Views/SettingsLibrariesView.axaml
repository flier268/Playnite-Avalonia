<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Playnite.DesktopApp.Avalonia.Views.SettingsLibrariesView">
  <StackPanel Spacing="10">
    <TextBlock Text="{Binding Header}" Foreground="{DynamicResource ShellTextBrush}" FontSize="20" />

    <Border Background="{DynamicResource ShellCardBrush}"
            BorderBrush="{DynamicResource ShellItemBorderBrush}"
            BorderThickness="1"
            Padding="12"
            CornerRadius="6">
      <StackPanel Spacing="8">
        <TextBlock Text="Database path" Foreground="{DynamicResource ShellTextBrush}" FontWeight="Bold" />
        <TextBlock Text="Set a Playnite profile folder containing games.db/platforms.db/genres.db/emulators.db."
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   TextWrapping="Wrap" />
        <TextBox Text="{Binding LibraryDbPath}" Watermark="e.g. D:\Playnite\library" />

        <TextBlock Text="{Binding CurrentStoreRoot, StringFormat=Current store: {0}, TargetNullValue='Current store: -'}"
                   Foreground="{DynamicResource ShellMutedTextBrush}" />

        <StackPanel Orientation="Horizontal" Spacing="8">
          <Button Content="Save + Reload" Command="{Binding SaveAndReloadCommand}" />
          <TextBlock Text="{Binding Status}" Foreground="{DynamicResource ShellMutedTextBrush}" VerticalAlignment="Center" />
        </StackPanel>

        <TextBlock Text="Note: Environment variable PLAYNITE_DB_PATH overrides this setting."
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>

    <Border Background="{DynamicResource ShellCardBrush}"
            BorderBrush="{DynamicResource ShellItemBorderBrush}"
            BorderThickness="1"
            Padding="12"
            CornerRadius="6">
      <StackPanel Spacing="8">
        <TextBlock Text="Steam installation paths" Foreground="{DynamicResource ShellTextBrush}" FontWeight="Bold" />
        <TextBlock Text="Optional: Specify custom Steam installation directories. Supports multiple paths separated by semicolon (;). Leave empty for auto-detection."
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   TextWrapping="Wrap" />
        <TextBox Text="{Binding SteamPath}" Watermark="e.g. C:\Steam;D:\Games\Steam or ~/.local/share/Steam;/mnt/games/Steam" />
        <TextBlock Text="Examples: C:\Program Files (x86)\Steam;D:\Steam | ~/.local/share/Steam;/mnt/games/Steam"
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   FontSize="11"
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>

    <Border Background="{DynamicResource ShellCardBrush}"
            BorderBrush="{DynamicResource ShellItemBorderBrush}"
            BorderThickness="1"
            Padding="12"
            CornerRadius="6">
      <StackPanel Spacing="8">
        <TextBlock Text="Epic Games manifests paths" Foreground="{DynamicResource ShellTextBrush}" FontWeight="Bold" />
        <TextBlock Text="Optional: Specify custom Epic Games manifests directories. Supports multiple paths separated by semicolon (;). Leave empty for auto-detection."
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   TextWrapping="Wrap" />
        <TextBox Text="{Binding EpicManifestsPath}" Watermark="e.g. C:\ProgramData\Epic\...\Manifests;D:\Epic\Manifests" />
        <TextBlock Text="Examples: C:\ProgramData\Epic\EpicGamesLauncher\Data\Manifests | ~/.config/heroic/legendaryConfig/metadata;~/.config/legendary/metadata"
                   Foreground="{DynamicResource ShellMutedTextBrush}"
                   FontSize="11"
                   TextWrapping="Wrap" />
      </StackPanel>
    </Border>
  </StackPanel>
</UserControl>
