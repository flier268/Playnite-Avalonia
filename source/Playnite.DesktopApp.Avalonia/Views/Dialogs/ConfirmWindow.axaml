<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Playnite.DesktopApp.Avalonia.Views.Dialogs.ConfirmWindow"
        Width="420"
        Height="180"
        Title="Confirm"
        WindowStartupLocation="CenterOwner">
  <Grid RowDefinitions="*,Auto" Margin="12">
    <Border Background="{DynamicResource ShellCardBrush}" Padding="12" CornerRadius="6" Margin="0,0,0,10">
      <TextBlock Text="{Binding Message}"
                 Foreground="{DynamicResource ShellTextBrush}"
                 TextWrapping="Wrap" />
    </Border>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="OK" Click="OnOkClick" />
      <Button Content="Cancel" Click="OnCancelClick" />
    </StackPanel>
  </Grid>
</Window>

